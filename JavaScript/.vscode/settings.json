{
  "workbench.iconTheme": "vs-seti",
  "php.validate.executablePath": "C:/php/php.exe",
  "php.validate.run": "onType",
  "php.validate.enable": false,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "files.autoSave": "onFocusChange",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.tokenColorCustomizations": {
    "comments": "#888888" // 주석 색상
  },
  "editor.formatOnSave": true, // 저장 코드 정렬
  "editor.tabSize": 2, // 들여쓰기(tab) 2칸
  "editor.insertSpaces": true, // 탭입력시 스페이스로 적용한다
  "editor.detectIndentation": false, // 위 2개 설정을 유지하기 위해 파일별 들여쓰기 감지 기능을 비활성화 함
  "files.eol": "\n",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "python.showStartPage": false,
  "python.languageServer": "Microsoft",
  "python.terminal.activateEnvironment": false,
  "code-runner.runInTerminal": true,
  "C_Cpp.default.systemIncludePath": [],
  "C_Cpp.default.compilerPath": "C:\\MinGW\\bin\\g++.exe",
  "miDebuggerPath": "C:\\MinGW\\bin\\g++.exe",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "angular.enable-experimental-ivy-prompt": false,
  "remote.SSH.remotePlatform": {
    "ridimotion.iptime.org": "linux",
    "cbnuoss.iptime.org": "linux"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.wordWrap": "on",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "liveServer.settings.proxy": {
    "enable": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.ignoreLimitWarning": true,
}
